# Ambient SDK Environment Configuration
# Copy this file to .env and modify as needed
# All variables are optional - sensible defaults are used if not set

# =============================================================================
# SENSOR CONFIGURATION
# =============================================================================

# Serial ports for TI radar (leave empty for auto-detection)
# Linux: /dev/ttyUSB0, /dev/ttyACM0
# macOS: /dev/cu.usbserial-*, /dev/cu.usbmodem*
AMBIENT_CLI_PORT=
AMBIENT_DATA_PORT=

# Auto-reconnect on connection loss
AMBIENT_AUTO_RECONNECT=false

# =============================================================================
# API SERVER
# =============================================================================

# Host to bind API server (0.0.0.0 for all interfaces)
AMBIENT_API_HOST=0.0.0.0

# API server port
AMBIENT_API_PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR)
AMBIENT_LOG_LEVEL=INFO

# =============================================================================
# FILE PATHS
# =============================================================================

# Directory for recorded data files
AMBIENT_DATA_DIR=data

# Directory for radar configuration profiles
AMBIENT_CONFIG_DIR=configs

# Directory for log files
AMBIENT_LOG_DIR=logs

# =============================================================================
# PERFORMANCE PROFILING
# =============================================================================

# Enable performance instrumentation
AMBIENT_PERF_ENABLED=false

# Log performance stats every N frames
AMBIENT_PERF_LOG_INTERVAL=100

# =============================================================================
# WEBSOCKET STREAMING
# =============================================================================

# Maximum messages in WebSocket queue before dropping
AMBIENT_STREAM_MAX_QUEUE=100

# Drop policy when queue full: oldest, newest, or none
AMBIENT_STREAM_DROP_POLICY=oldest

# Maximum size for range-doppler heatmap (rows/cols)
AMBIENT_STREAM_MAX_HEATMAP=64

# Maximum samples for waveform data
AMBIENT_STREAM_MAX_WAVEFORM=200

# Vitals broadcast rate in Hz
AMBIENT_STREAM_VITALS_HZ=1.0

# Include range-doppler data in frame messages
AMBIENT_STREAM_INCLUDE_RD=true

# Include waveform data in vitals messages
AMBIENT_STREAM_INCLUDE_WAVEFORMS=true

# =============================================================================
# CHIRP MODE (TI Vital Signs firmware)
# =============================================================================

# Enable chirp mode auto-detection
AMBIENT_CHIRP_ENABLED=true

# Target detection range in meters
AMBIENT_CHIRP_RANGE_MIN=0.2
AMBIENT_CHIRP_RANGE_MAX=5.0

# Output mode: 3=PHASE (vitals only), 5=PHASE_IQ (phase + I/Q range profile)
AMBIENT_CHIRP_OUTPUT_MODE=5

# =============================================================================
# DEVELOPMENT / TESTING
# =============================================================================

# Enable mock radar mode (generates synthetic data without hardware)
AMBIENT_MOCK_RADAR=false

# Mock data frame rate in Hz
AMBIENT_MOCK_FRAME_RATE=20.0

# Enable debug mode (verbose logging, extra validation)
AMBIENT_DEBUG=false

# Project root directory (auto-detected if not set)
# Used for finding configs, data, and other resources
AMBIENT_PROJECT_DIR=
